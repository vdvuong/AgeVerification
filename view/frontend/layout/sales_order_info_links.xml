<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="sales.order.info.links">
            <block class="Magento\Sales\Block\Order\Link" name="sales.order.av.info" ifconfig="ageverification/general/enabled">
                <arguments>
                    <argument name="key" xsi:type="string">age-verification</argument>
                    <argument name="path" xsi:type="string">ageverification/view/attachment</argument>
                    <argument name="label" xsi:type="helper" helper="Magentiz\AgeVerification\Helper\Data::getTitle"></argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
