<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <ageverification>
            <popup>
                <enabled>0</enabled>
                <popup_width>auto</popup_width>
                <popup_height>auto</popup_height>
                <cookie_interval>24</cookie_interval>
                <popup_block>magentiz-age-verification</popup_block>
                <pages>home</pages>
                <agree>Enter</agree>
                <disagree>Cancel</disagree>
            </popup>
            <checkout>
                <enabled>0</enabled>
                <title>Age Verification</title>
                <additional_information></additional_information>
                <display_position>after-shipping-address</display_position>
                <count>2</count>
                <size>500</size>
                <extension>jpg,jpeg,png,gif</extension>
            </checkout>
        </ageverification>
    </default>
</config>
